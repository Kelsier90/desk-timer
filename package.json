{
  "main": "public/electron.js",
  "name": "desk-timer",
  "author": "Rub√©n <rubenalb90@gmail.com>",
  "version": "1.0.0",
  "description": "Desktop countdown timers",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "electron-is-dev": "^1.2.0",
    "node-sass": "^4.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev-win": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "dist:linux": "electron-builder --linux"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "wait-on": "^5.2.0"
  },
  "build": {
    "appId": "com.kelsier90.desk-timer",
    "linux": {
      "target": [
        "deb",
        "snap",
        "rpm"
      ],
      "icon": "src/icons/linux/512x512.png",
      "category": "Utility",
      "synopsis": "Desktop countdown timers"
    }
  }
}
